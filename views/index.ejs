<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>message_board</title>
  </head>
  <body>
    <h1> The Dojo Message Board</h1>
    <hr />
    <form action='/posts' method='post'>
    <table>
      <tbody>
        <tr>
          <td>Name:</td>
          <td><input type='text'  name='name' /></td>
        </tr>
        <tr>
          <td>Message:</td>
          <td><textarea style="width: 500px; height: 100px;"name='message'></textarea></td>
        </tr>
      </tbody>
    </table>
    <input type="submit" value="Post Message" >
    </form>

<hr />


<% for(var i = 0; i < post.length; i++){%>
  <h2 style="color: blue;">Post</h2>
  <h3>Name: <%= post[i].name %></h3>
  <h4>Message: <%= post[i].message %></h4>

  <h4 style="color: Red;">Comments:<hr /></h4>
    <% for (var x=0; x < post[i].comments.length; x++){ %>
      <h5> Name: <%= post[i].comments[x].name %> </h5>
      <p> Comment: <%= post[i].comments[x].comment %> </p>

  <% } %>


      <form action= "/comments/<%= post[i]._id %>" method='post'>
        <label for="name">Name:</label>
            <input type='text' name='name'>
        <label for="comment">Comment:</label>
            <textarea style="width: 250px; height: 50px;" name='comment'></textarea>

      <input type="submit" value="Comment" />
    </form>

<hr />
    <% } %>
  </body>
</html>
